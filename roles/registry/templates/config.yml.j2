---
version: 0.1
log:
  accesslog:
    disabled: true
  level: debug
  formatter: json
  fields:
    service: registry
    environment: home-lab
storage:
  filesystem:
    rootdirectory: /var/lib/registry
  delete:
    enabled: true
  cache:
      blobdescriptor: inmemory
  tag:
    concurrencylimit: 5
auth:
  htpasswd:
    realm: local-registry
    path: /etc/docker/registry/auth/htpasswd
http:
  addr: :5000
  debug:
    addr: :5001
    prometheus:
      enabled: true
      path: /metrics
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
